@page
@using Blocktrust.Mediator.Server.Pages.Shared
@model Blocktrust.Mediator.Server.Pages.Index



@if (Model.QrCodeModel.OnlyDisplayUrl)
{
    @Model.QrCodeModel.OobUrl
}
else
{
    Layout = "_Layout";
    <section>
        <div class="container flex flex-col justify-center p-4 mx-auto md:p-6">
            <h2 class="mb-12 text-4xl font-bold font-museo leading-none  md:text-left  sm:text-5xl">
                blocktrust mediator
            </h2>
            <div class="">
                <div>
                    <p class="mt-1 mb-2 text-3xl text-gray-800">Features</p>
                    <hr class="h-px my-8 bg-black-200 border-1 dark:bg-gray-700">
                    <p class="mt-1 mb-2 text-xl text-gray-600">This Mediator is written in C# and built for the .NET ecosystem. To get to the source code and more information follow the link to <a style="text-decoration:underline" class="text-secondary underline" href="https://github.com/bsandmann/blocktrust.Mediator" target="_blank">GitHub</a></p>
                    <p class="mt-1 mb-2 text-xl text-gray-600">Currently these protocols/extensions are (mostly) supported:</p>
                    <ul class="space-y-2 pl-5">
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline"target="_blank" href="https://identity.foundation/didcomm-messaging/spec/#out-of-band-messages">Out-of-Band Messages 2.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://identity.foundation/didcomm-messaging/spec/#routing-protocol-20">Routing Protocol 2.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://didcomm.org/mediator-coordination/2.0/">Mediator Coordination Protocol 2.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://didcomm.org/pickup/3.0/">Pickup Protocol 3.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://identity.foundation/didcomm-messaging/spec/#trust-ping-protocol-20">Trust Ping Protocol 2.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://identity.foundation/didcomm-messaging/spec/#discover-features-protocol-20">Discover Features Protocol 2.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://didcomm.org/basicmessage/2.0/">Basic Message Protocol 2.0/</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://didcomm.org/shorten-url/1.0/">Shorten URL Protocol 1.0</a>
                        </li>
                        <li class="list-disc max-w-md md:text-left">
                            <a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://github.com/decentralized-identity/didcomm-messaging/blob/main/extensions/return_route/main.md">DIDComm v2 Return-Route Extension</a>
                        </li>
                    </ul>
                    <p class="mt-3 mb-2 text-xl text-gray-600">If you encounter any issues feel free to open a issue on Github or contact us at <a style="text-decoration:underline" class="text-secondary underline" href="mailto:sandmann@blocktrust.dev">sandmann@blocktrust.dev</a></p>
                </div>
            </div>
            <div class="mt-7">
                <p class="mb-2 text-3xl text-gray-800">Connect</p>
                <hr class="h-px my-8 bg-black-200 border-1 dark:bg-gray-700">
                <p class="mt-1 mb-2 text-xl text-gray-600">To connect to the mediator (<a style="text-decoration:underline" class="text-secondary underline" target="_blank" href="https://didcomm.org/mediator-coordination/2.0/">Mediator Coordination Protocol 2.0</a>) copy this url or scan the QR-code below:</p>
                <p style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas; background-color: #efefef" class="break-all font-mono p-4 my-4 border-gray-400 bg-gray-30 dark:border-gray-400 dark:bg-gray-800">
                    @Model.QrCodeModel.OobUrl
                </p>
                <div class="max-w-lg">
                    @Html.Raw(@Model.QrCodeModel.OobSvg)
                </div>
            </div>
            <div class="mt-5">
                   <p class="mt-1 mb-2 text-xl text-gray-600">Since we are also supporting the <a target="_blank" href="https://didcomm.org/shorten-url/1.0/">Shorten URL Protocol</a> you can also use the shortened-link from above which resolves into the same URL. The shortend URL is also encoded in the smaller QR-code below:</p>
                <p style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas; background-color: #efefef" class="break-all font-mono p-4 my-4 border-gray-400 bg-gray-30 dark:border-gray-400 dark:bg-gray-800">
                    @Model.QrCodeModel.OobUrlShort
                </p>
                <div class="max-w-lg">
                    @Html.Raw(@Model.QrCodeModel.OobSvgSmall)
                </div>
            </div>
        </div>
    </section>
}